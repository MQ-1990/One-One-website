---
import { ArrowRight } from "lucide-react";
import imgBanhgaoKhoailangtim from "../assets/products/khoai-lang-tim.png";
import imgBanhgaoNgotDiuCanxi from "../assets/products/ngot-diu-canxi.png";
import imgBanhgaoBoNuongCanxi from "../assets/products/bo-nuong-canxi.png";

const products = [
  {
    id: 1,
    name: "Bánh gạo khoai lang tím",
    image: imgBanhgaoKhoailangtim,
    isNew: true,
  },
  {
    id: 2,
    name: "Bánh gạo vị ngọt dịu (+Canxi)",
    image: imgBanhgaoNgotDiuCanxi,
    isNew: true,
  },
  {
    id: 3,
    name: "Bánh gạo vị bò nướng (+Canxi)",
    image: imgBanhgaoBoNuongCanxi,
    isNew: true,
  }
];
---

<section class="bg-[#FFF5E5] py-24 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-[#124734]">
        <span class="text-[#da203a]">Vị mới</span>, càng ăn càng ngon!
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {products.map((product) => (
        <div class="group relative flex flex-col items-center">
          {/* Product Image Container */}
          <div class="relative w-full aspect-square max-w-[400px] mb-6 flex items-center justify-center">
             <div class="absolute inset-4 bg-[#e7e0cd] rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform duration-300"></div>
             <img 
                src={product.image.src} 
                alt={product.name} 
                class="relative z-10 w-[90%] h-auto object-contain drop-shadow-xl group-hover:scale-110 transition-transform duration-300" 
             />
             {product.isNew && (
                <div class="absolute top-0 right-0 z-20 bg-[#a2d8cf] text-[#124734] font-bold px-4 py-2 rounded-lg text-sm shadow-md">
                    MỚI
                </div>
             )}
          </div>

          {/* Title & Button */}
          <div class="text-center relative z-10 mt-4">
             <div class="bg-[#e7e0cd] px-6 py-3 rounded-xl mb-4 inline-block shadow-sm">
                <h3 class="text-[#124734] font-bold text-lg md:text-xl">{product.name}</h3>
             </div>
             <div class="flex justify-center">
                <a href="/products" class="flex items-center gap-2 text-[#124734] font-medium border-b-2 border-[#124734] pb-1 hover:text-[#da203a] hover:border-[#da203a] transition-colors">
                    CHI TIẾT <ArrowRight className="w-4 h-4" />
                </a>
             </div>
          </div>
        </div>
      ))}
    </div>

    <div class="flex justify-center">
        <a href="/products" class="border-2 border-[#124734] text-[#124734] px-10 py-3 rounded-full font-bold hover:bg-[#124734] hover:text-white transition-all duration-300">
            CÁC SẢN PHẨM KHÁC
        </a>
    </div>
  </div>
</section>
